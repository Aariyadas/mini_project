

<%- include('../layouts/guestHeader.ejs') %>

    <div class="ex-form-1 mt-5 pt-5 pb-5">
        <div class="container">
            <div class="col-xl-6 offset-xl-3">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title" style="display: flex; justify-content: center;">
                            <h3 class="text-danger">Forgot Password</h3>
                        </div>
                        <hr>
                        <% if(typeof message!=='undefined' ){ %>
                            <h3>
                                <p style="color: red;">
                                    <%= message%>
                                </p>
                            </h3>
                            <% } %>
                                <% if(forgotpassword){ %>
                                    <form action="/forgotpassword" method="post">
                                        <div class="form-group mb-3">
                                            <input type="text" class="form-control form-control-rounded" name="email"
                                                id="input-7" placeholder="Enter Your Email Address" required>
                                        </div>
                                        <div class="form-group">
                                            <button type="submit" class="site-btn"><i class="icon-lock"></i>
                                                Verify </button>
                                        </div>
                                    </form>
                                    <% } %>
                                        <% if(checkuser){ %>
                                            <form action="/forgotpasswordotp" method="post">
                                                <div class="d-flex flex-row align-items-center mb-4">
                                                    <div class="form-outline flex-fill mb-0">
                                                        <input type="number" id="form3Example3c" class="form-control"
                                                            name="otp" placeholder="Enter your OTP" required />
                                                    </div>
                                                </div>
                                                <div class="row vertical-gap">
                                                    <div class="col-md-6">
                                                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                                            <input type="hidden" name="checkOtp" value="<%= otp %>">
                                                            <input type="hidden" name="user" value="<%= user %>">
                                                            <button type="submit" value="Register"
                                                                class="btn btn-primary btn-lg">Confirm</button>
                                                        </div>
                                                    </div>
                                            </form>
                                            <% } %>
                                                <% if(changepassword){ %>
                                                    <form action="/forgotpasswordchange" method="post">
                                                        <div class="form-group mb-3">
                                                            <input type="text" class="form-control form-control-rounded"
                                                                name="password1" id="input-7"
                                                                placeholder="Enter Your New Password" required>
                                                        </div>
                                                        <div class="form-group mb-3">
                                                            <input type="password"
                                                                class="form-control form-control-rounded"
                                                                name="password2" id="input-9"
                                                                placeholder="Re-Enter Password" required>
                                                        </div>
                                                        <div class="form-group">
                                                            <button type="submit" class="site-btn"><i
                                                                    class="icon-lock"></i>
                                                                Login</button>
                                                        </div>
                                                    </form>
                                                    <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</script>
