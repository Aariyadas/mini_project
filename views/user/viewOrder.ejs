<!DOCTYPE html>
<html lang="en">

<head>
	<title>Bellinda</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800" rel="stylesheet">

	<link rel="stylesheet" href="/assets/css/open-iconic-bootstrap.min.css">
	<link rel="stylesheet" href="/assets/css/animate.css">

	<link rel="stylesheet" href="/assets/css/owl.carousel.min.css">
	<link rel="stylesheet" href="/assets/css/owl.theme.default.min.css">
	<link rel="stylesheet" href="/assets/css/magnific-popup.css">

	<link rel="stylesheet" href="/assets/css/aos.css">

	<link rel="stylesheet" href="/assets/css/ionicons.min.css">

	<link rel="stylesheet" href="/assets/css/bootstrap-datepicker.css">
	<link rel="stylesheet" href="/assets/css/jquery.timepicker.css">


	<link rel="stylesheet" href="/assets/css/flaticon.css">
	<link rel="stylesheet" href="/assets/css/icomoon.css">
	<link rel="stylesheet" href="/assets/css/style.css">
	<link type="text/css" rel="stylesheet" href="magiczoom/magiczoom.css" />
	<script type="text/javascript" src="magiczoom/magiczoom.js"></script>
</head>
<%- include("../layouts/header.ejs") %>
<section class="h-100 gradient-custom">
  <div class="container  ">
      <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-lg-10 col-xl-8">
              <div class="card" style="border-radius: 20px;">
                  <div class="card-header px-4 py-5">
                      <h5 class=" mb-0 text-success">Thanks for your Order <span
                              class="text-success">
                              <%= user.name %>
                          </span>!</h5>
                  </div>
                  <div class="card-body p-4">
                      <div class="d-flex justify-content-between align-items-center mb-4">
                          <p class="lead fw-normal mb-0" style="color: #4304ff;"></p>
                          <p class="small text-muted mb-0">Receipt Voucher : NAN</p>
                      </div>

                      <% for(let i=0;i<order.products.item.length;i++){ %>


                          <div class="card shadow-0 border mb-4">
                              <div class="card-body">
                                  <div class="row">
                                      <div class="col-md-2">
                                          <img src="/banners/<%= order.products.item[i].productId.image[0]%>"
                                              class="img-fluid" alt="lol">
                                      </div>
                                      <div
                                          class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                          <p class="text-muted mb-0">
                                              <%=order.products.item[i].productId.name %>
                                          </p>
                                      </div>
                                      
                                      <div
                                          class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                          <p class="text-muted mb-0 small">Category:<%=
                                                  order.products.item[i].productId.category %>
                                          </p>
                                      </div>
                                      <div
                                          class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                          <p class="text-muted mb-0 small">Quantity:<%=
                                                  order.products.item[i].quantity %>
                                          </p>
                                      </div>
                                      <div
                                          class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                          <p class="text-dark mb-0 small">₹<%=
                                                  order.products.item[i].productId.price %>
                                          </p>
                                      </div>
                                      
                                  </div>
                              </div>
                              <hr class="mb-2" style="background-color: #221f1f; opacity: 3;">
                              <% if(order.status=='Delivered' ){ %>

                                  <div class="mb-2">
                                          <% if(order.productReturned[i]==0){ %>
                                          <a href="/cancelProduct?id=<%= order.products.item[i].productId._id%>"
                                              class="col-lg-10 col-xl-12 btn btn-outline-danger"> Return
                                              Product</a>
                                          <% }else{%>
                                              <a href="" class="col-lg-10 col-xl-12 btn btn-outline-success">
                                                  Product
                                                  Returned</a>
                                      <% } %>

                                  </div>
                                      <% } %>
                              
                          </div>
                          <% } %>


                              <div class="d-flex justify-content-between pt-2">
                                  <div class="mb-0">
                                      <p class="text-muted mb-0">Track Order</p>
                                  </div>
                                  <div class="mb-0">
                                      <div class="d-flex justify-content-around mb-1">
                                          <p class="text-info mt-1 mb-0 ms-xl-5">
                                              <%= order.status %>
                                          </p>
                                      </div>
                                  </div>
                              </div>

                              <div class="d-flex justify-content-between pt-2">
                                  <p class="fw-bold mb-0">Order Details</p>
                                  <%if(order.discount>=0){%>

                                      <p class="text-muted mb-0"><span
                                              class="fw-bold me-4">Total</span> ₹
                                          <%=(order.products.totalPrice *100)/(100-order.discount)%>
                                      </p>
                                  <%}else{%>
                                      <p class="text-muted mb-0"><span
                                          class="fw-bold me-4">Total</span> ₹
                                      <%=order.products.totalPrice %>
                                  </p>
                                 <% }%>
                              </div>

                              <div class="d-flex justify-content-between pt-2">
                                  <p class="text-muted mb-0">Invoice Number : <%= order._id %>
                                  </p>
                                  <p class="text-muted mb-0"><span
                                          class="fw-bold me-4">Discount</span> ₹ 

                                  </p>
                              </div>

                              <div class="d-flex justify-content-between">
                                  <p class="text-muted mb-0">Invoice Date : <%= order.createdAt.toDateString() %>
                                  </p>

                              </div>

                              <div class="d-flex justify-content-between mb-5">
                                  <p class="text-muted mb-0">Recepits Voucher : <%= order.offer %> = <%=order.discount%>% </p>
                                  <p class="text-muted mb-0"><span class="fw-bold me-4">Delivery
                                          Charges</span> Free</p>
                              </div>
                  </div>
                  <div class="card-footer border-0 px-4 py-5 bg-sucess"
                      style=" border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
                      <h5
                          class="d-flex align-items-center justify-content-end text-black text-uppercase mb-0">
                          Total
                          paid: <span class="h2 mb-0 ms-2"> ₹ <%=order.products.totalPrice %>
                                  </span>
                      </h5>
                  </div>
              </div>
          </div>
      </div>
  </div>
</section>
<%- include('../layouts/footer.ejs') %>
